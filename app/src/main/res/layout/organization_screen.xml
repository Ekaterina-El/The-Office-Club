<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="master"
            type="com.elka.heofficeclub.view.ui.organizationScreen.OrganizationFragment" />

        <variable
            name="viewModel"
            type="com.elka.heofficeclub.viewModel.OrganizationViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:onClick="@{() -> master.logout()}"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/add_padding"
            android:layout_marginTop="@dimen/add_padding"
            android:src="@drawable/ic_exit" />

        <TextView
            style="@style/text.h1"
            android:text="@{viewModel.organization.fullName}"
            tools:text="Full name"
            android:layout_marginHorizontal="@dimen/add_padding"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>