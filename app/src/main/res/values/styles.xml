<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="text" parent="android:Widget.TextView">
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="text.bold" parent="text">
        <item name="android:textSize">13sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="text.bold.button" parent="text.bold">
        <item name="android:textColor">@color/accent</item>
        <item name="android:paddingHorizontal">10dp</item>
        <item name="android:paddingVertical">5dp</item>
    </style>

    <style name="text.h1" parent="text">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text.h2" parent="text">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="text.h2.bold" parent="text.h2">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text.h3" parent="text">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="text.hint" parent="text">
        <item name="android:textColor">@color/hint_color</item>
    </style>


    <style name="text.hint.small" parent="text.hint">
        <item name="android:textSize">13dp</item>
    </style>

    <style name="text.hint.big" parent="text.hint">
        <item name="android:textSize">15sp</item>
    </style>


    <style name="button" parent="ThemeOverlay.Material3.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="borderlessButtonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="android:foreground">?android:attr/selectableItemBackground</item>
        <item name="android:shadowRadius">0</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="FieldContent">
        <item name="android:maxLines">1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/on_primary</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FieldWrapper" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextColor">@color/on_primary</item>
        <item name="errorIconDrawable">@null</item>
        <item name="startIconTint">@color/on_primary</item>
        <item name="android:textColorHint">@color/on_primary</item>
        <item name="boxStrokeColor">@color/box_color</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextColor">@color/attention</item>
    </style>


</resources>